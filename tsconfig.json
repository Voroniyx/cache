{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "noEmit": true,
        "moduleDetection": "force",
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true
    }
}